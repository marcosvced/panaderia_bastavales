---

import Logo from "../atoms/logo.astro";---
<header>
    <Logo/>
</header>

<style>

    header {
        display: flex;
        align-items: center;
        position: fixed;
        top: 0;
        z-index: 900;

        @apply
        -height(64)
        -screen(sm):height(86)
        -screen(xl):height(145)
        -p-inline(4)
        -screen(xs):p-inline(6)
        -screen(md):p-inline(8)
        -screen(lg):p-inline(10)
        -screen(xxl):p-inline(18);
    }


</style>

