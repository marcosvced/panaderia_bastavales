---
import {Image} from 'astro:assets'
import img1 from '@assets/img/contact.png'
---
<section class="o-contact -container" id="contacto">
    <h2 class="-fill-container -m-t(0) -m-b(8)">
        Ponte en contacto con nos
    </h2>
    <div class="container__wrapper -fill-container -grid -gap(4) -screen(md):gap(24) -columns(1) -screen(md):columns(3) -p-x(0) -p-y(0)">
        <Image src={img1}
               alt="A bird sitting on a nest of eggs."
               format={'webp'}
               decoding="async"
               loading="lazy"
               class='about__img -column-start(1) -column-span(1) -width(100%)'
        />
        <div class="contact -m-b(20) -screen(md):column-start(2) -screen(md):column-end(4) ">
            <div class="contact__address-phone -m-b(20)">
                <h3 class="contact__title -m-t(0) -m-b(4)">
                    Localizanos en:
                </h3>
                <p class="-m-b(12)">
                    Aldea Sabax치ns, 41, 15280 Sabaxans, A Coru침a
                </p>

                <h3 class="contact__title -m-t(0) -m-b(4)">
                    Deixanos unha mensaxe ou ch치menenos a:
                </h3>
                <p class="-m-y(0) -border-bottom(0)">Tel.: 622 - 02 - 44 - 33</p>
                <p class="-m-y(0)">Tel.: 981 - 88 - 86 - 24</p>
            </div>
            <div class="contact__opening-hours">
                <h3 class="opening-hours__title -m-t(0) -m-b(4)">Horario</h3>
                <p class="-m-y(0)">Luns - Venres: <strong>09:30 - 15:00</strong></p>
                <p class="-m-y(0)">S치bado - Domingo: <strong>09:30 - 15:30</strong></p>
            </div>
        </div>
    </div>
</section>
<style>
    h2 {
        font-family: var(--ff-title), sans-serif;
        font-size: var(--fs-huge);
        font-weight: normal;
    }

    .container__wrapper {
        align-items: center;
    }

    .container__wrapper :global(img) {
        width: 100%;
        height: auto;
        border: 0;
        user-select: none;
        display: none;

        @screen md {
            display: block;
        }
    }

    h3 {
        font-family: var(--ff-body), serif;
        font-weight: normal;
        color: theme('colors.primary');
    }

    p {
        border-bottom-width: 1px;
        border-bottom-style: dashed;
        border-bottom-color: theme('colors.opacity-500');
        border-top-width: 1px;
        border-top-style: dashed;
        border-top-color: theme('colors.opacity-500');
        display: block;
        font-family: var(--ff-body), serif;
        font-size: 1.15rem;
        @apply -p-y(4);
    }

    .contact__opening-hours > p:last-of-type {
        border-top: 0;
    }
</style>