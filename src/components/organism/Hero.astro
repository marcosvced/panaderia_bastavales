---
import {Picture} from 'astro:assets'
import heroImage from '@assets/img/hero.png'
import Button from "../atoms/Button.astro";
---
<section class="o-hero grid">
    <div class="claim">
        <h1 class="-m-y(0)">
            Desfruta do sabor <br/> da tradición
        </h1>
        <h2 class="-m-b(16)">
            Panadería Bastavales <br/>
            Pan artesan en <b>forno de leña</b> dende <b>1820</b>.
        </h2>

        <Button text="Descrubenos"/>
    </div>

    <Picture
            src={heroImage}
            alt="A bird sitting on a nest of eggs."
            format={'webp'}
            decoding="async"
            loading="lazy"
            pictureAttributes={{class: 'hero__picture'}}

    />
</section>

<style>
    .o-hero {
        position: relative;
        align-items: center;
    }

    .o-hero:before {
        content:"";
        pointer-events: none;
        position: absolute;
        width: 100%;
        height: 20%;
        display: block;
        --color: theme('colors.ash');
        bottom: 0;
        background-image: linear-gradient(to bottom, transparent, theme('colors.ash'));
    }

    .claim {
        position: absolute;
        @apply
        -column-start(3)
        -column-end(16);
    }


    .claim h1 {
        font-size: clamp(40px, 5vw + 1rem, 104px);
        font-family: 'New York';
        font-weight: 400;
    }

    .claim h2 {
        font-size: clamp(16px, 2vw + 1rem, 24px);
        width: 90%;
        font-family: Inter;
        font-weight: 200;
        line-height: 1.25;
    }

    .hero__picture {
        display: block;
        height: 100vh;

        @apply
        -column-start(5)
        -column-end(25);

    }

    .hero__picture > img {
        display: block;
        object-fit: cover;

        @apply
        -width(100%)
        -height(100%);
    }
</style>